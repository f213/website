{
  "name": "frontend-1",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "dev": "npx sass --load-path=node_modules --watch public/css & cross-env NODE_ENV=development nodemon app.js",
    "build": "npx sass --load-path=node_modules --no-source-map  public/css",
    "lint": "npx prettier . --check",
    "fmt": "npx prettier . --write"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "consola": "^3.2.3",
    "express": "^5.0.0-beta.3",
    "http-errors": "~1.6.3",
    "http-proxy-middleware": "^3.0.0",
    "morgan": "~1.9.1",
    "nunjucks": "^3.2.4",
    "timeago.js": "^4.0.2"
  },
  "devDependencies": {
    "bulma": "^1.0.1",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "prettier-plugin-jinja-template": "^1.4.1",
    "sass": "^1.77.6"
  },
  "nodemonConfig": {
    "watch": [
      "routes",
      "views",
      "lib"
    ],
    "ext": "js,json,html"
  }
}
